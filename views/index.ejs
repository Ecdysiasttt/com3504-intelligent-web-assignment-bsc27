        <h1><a href="/" class="text-reset text-decoration-none"><%= site_name %></a></h1>
        <a href="/plants/add" class="text-reset text-decoration-none btn btn-outline-dark">Add plant sighting</a>
    </header>

    <main>
        <script>

          function test(plantID) {
            var photo = document.getElementById('photo-' + plantID);

            var width = photo.naturalWidth;
            var height = photo.naturalHeight;

            // should the formatting be vertical?, i.e. photo stacked on top of info?
            var isVertical = (!((Math.abs(width - height) > 0.05 * height) && height > width));

            console.log("Is layout vertical? " + isVertical);

            var infoPanel = document.getElementById('left-panel-'+ plantID);
            var icons = document.getElementById('icons-' + plantID);

            // adjust formatting based on photo orientation
            if (isVertical) {
              var infoContainer = document.getElementById('info-div-' + plantID);

              // set photo width to 35% (was 100% before)
              photo.style.width = "35%";

              infoContainer.style.flexDirection = "column-reverse";

              infoPanel.style.display = "flex";
              infoPanel.style.justifyContent = "space-between";

              icons.style.justifyContent = "flex-end";
              for (var child of icons.children) {
                child.style.marginLeft = "0.5rem";
              }
            } else {
              infoPanel.style.minWidth = "35%";

              icons.style.flexDirection = "column";
              for (var child of icons.children) {
                child.style.marginTop = "0.5rem";
              }
            }
          }
        </script>

        <div>
            <% if (data.length > 0) { %>
                <% data.forEach(plant => { %>
                    <div id="div-<%= plant._id %>" class="mb-2 border border-dark rounded p-2">
<!--                        meta-info: name, found by, found on... -->
